<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/regist_backgroud"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip" 
        android:visibility="gone"
        >
		<ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/regist_top"
            />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="用户登录"
            android:textSize="18dip"
            android:textColor="#FFFFFF"
             />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/regist_topleft" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_new_bg" >

        <RelativeLayout
            android:id="@+id/login_rl_headimg"
            android:layout_width="match_parent"
            android:layout_height="128dip"
            android:layout_marginTop="40dip" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/login_img"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/register_rl_confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="54dip"
            android:layout_below="@+id/login_rl_headimg"
            android:layout_marginTop="70dp" >

            <EditText
                android:id="@+id/login_name_edit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="32dip"
                android:layout_marginRight="32dip"
                android:layout_marginTop="2dip"
                android:background="@drawable/regist_text"
                android:hint="用户名" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_rl_password"
            android:layout_width="match_parent"
            android:layout_height="54dip"
            android:layout_below="@+id/register_rl_confirmpassword"
            android:layout_marginTop="4dip" >

            <EditText
                android:id="@+id/login_password_edit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="32dip"
                android:layout_marginRight="32dip"
                android:layout_marginTop="2dip"
                android:background="@drawable/regist_text"
                android:hint="密码"
                android:inputType="textPassword" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_rl_logintype"
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_below="@+id/login_rl_password"
            android:layout_marginTop="4dip" >

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dip"
                android:text="保持登录" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/checkBox1"
                android:layout_alignBottom="@+id/checkBox1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32dip"
                android:text="记住密码" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_rl_login"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_below="@+id/login_rl_logintype" >

            <Button
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dip"
                android:layout_marginLeft="32dip"
                android:layout_marginRight="32dip"
                android:layout_marginTop="4dip"
                android:background="@drawable/login_button"
                android:layout_centerInParent="true"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_rl_newuser"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_below="@+id/login_rl_login" >

            <Button
                android:id="@+id/btn_newuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dip"
                android:layout_marginLeft="32dip"
                android:layout_marginRight="32dip"
                android:layout_marginTop="4dip"
                android:background="@drawable/regist_save"
                android:layout_centerInParent="true"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_rl_newuser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp" >

            <ImageView
                android:id="@+id/pic_help"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignTop="@+id/txt_help"
                android:src="@drawable/help01" />

             <TextView
                android:id="@+id/txt_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="儿童急救知识 V1.0" 
                android:layout_toRightOf="@+id/pic_help"
                android:layout_centerInParent="true"
                android:textSize="20dip"
                />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>

