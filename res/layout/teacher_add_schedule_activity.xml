<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_wandr_view"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/app_page_bg" >
    
    <RelativeLayout
        android:id="@+id/top_relative"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip" >

        <ImageView
            android:id="@+id/titleBg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/main_actionbar_bg" />

        <ImageView
            android:id="@+id/add_wandr_back_btn"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="15dip"
            android:src="@drawable/categorytwo_back_button_x" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="10.0dip"
            android:singleLine="true"
            android:text="添加新日程"
            android:textColor="@color/white"
            android:textSize="18dp" />
        
         <Button
            android:id="@+id/titleRightButton"
            android:layout_width="40.0dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="8.0dip"
            android:textColor="@color/white"
            android:background="@drawable/bar_register_btn_shape"
            android:layout_marginBottom="8.0dip"
            android:textSize="10sp"
            android:visibility="gone"
            android:text="跳过"
             />
        
    </RelativeLayout>
    
    <ScrollView
        android:id="@+id/add_wandr_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_below="@id/top_relative" >
    
   
        <RelativeLayout
        android:id="@+id/add_wandr_rlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
	>
	<RelativeLayout
            android:id="@+id/add_wandr_item0"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="30.0dip"
            android:background="@drawable/more_itemtop_press" >

			<TextView
			    android:id="@+id/add_wandr_name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:layout_marginLeft="15.0dip"
			    android:text="日        期:" />
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="50dip"
			    android:layout_marginRight="10dip"
			    android:layout_marginLeft="15dip"
			    android:layout_toRightOf="@id/add_wandr_name"
			    android:layout_weight="1"
			    android:orientation="horizontal" >

			    <EditText
			        android:id="@+id/add_wandr_date_edit"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_gravity="end"
			        android:layout_weight="1"
			        android:maxLength="20"
			        android:focusable="false"
			        android:textSize="18sp"
			        android:background="@null"
			        android:singleLine="true"  />

			    <ImageButton
			        android:id="@+id/add_select_date_btn"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_weight="5"
			        android:background="@drawable/add_task_time_btn"
			        android:src="@drawable/ic_date" />

			</LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/add_wandr_item1"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            
            android:layout_below="@+id/add_wandr_item0"
            android:background="@drawable/more_itemmiddle_press" >

			<TextView
			    android:id="@+id/add_wandr_name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:layout_marginLeft="15.0dip"
			    android:text="开始时间:" />
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="50dip"
			    android:layout_marginRight="10dip"
			    android:layout_marginLeft="15dip"
			    android:layout_toRightOf="@id/add_wandr_name"
			    android:layout_weight="1"
			    android:orientation="horizontal" >

			    <EditText
			        android:id="@+id/add_wandr_name_edit"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_gravity="end"
			        android:layout_weight="1"
			        android:maxLength="20"
			        android:focusable="false"
			        android:textSize="18sp"
			        android:background="@null"
			        android:singleLine="true"  />

			    <ImageButton
			        android:id="@+id/add_start_date_btn"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_weight="5"
			        android:background="@drawable/add_task_time_btn"
			        android:src="@drawable/ic_date" />

			</LinearLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/add_wandr_item2"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_below="@id/add_wandr_item1"
            android:background="@drawable/more_itemmiddle_press"
             >
			<TextView
			    android:id="@+id/add_wandr_name1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:layout_marginLeft="15.0dip"
			    android:text="结束时间:" />
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="50dip"
			    android:layout_marginRight="10dip"
			    android:layout_marginLeft="15dip"
			    android:layout_toRightOf="@id/add_wandr_name1"
			    android:layout_weight="1"
			    android:orientation="horizontal" >
			    <EditText
			        android:id="@+id/add_wandr_name1_edit"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_gravity="end"
			        android:layout_weight="1"
			        android:maxLength="20"
			        android:focusable="false"
			        android:textSize="18sp"
			        android:background="@null"
			        android:singleLine="true" />

			    <ImageButton
			        android:id="@+id/add_stop_date_btn"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_weight="5"
			        android:background="@drawable/add_task_time_btn"
			        android:src="@drawable/ic_date" />
			</LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/add_wandr_item3"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_below="@id/add_wandr_item2"
            android:background="@drawable/more_itemmiddle_press"
             >
			<TextView
			    android:id="@+id/add_wandr_types"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:layout_marginLeft="15.0dip"
			    android:text="作       息:" />

			<Button
			    android:id="@+id/diarytype_dialog_showbtn"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentBottom="true"
			    android:layout_alignParentRight="true"
			    android:text="作息" />

			<ImageView
			    android:id="@+id/diarytype_img"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerVertical="true"
			    android:layout_marginLeft="10dp"
			    android:layout_toRightOf="@+id/add_wandr_types"
			    android:src="@android:drawable/ic_menu_report_image" />

			<TextView
			    android:id="@+id/diarytype_name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignBaseline="@+id/diarytype_dialog_showbtn"
			    android:layout_alignBottom="@+id/diarytype_dialog_showbtn"
			    android:layout_marginLeft="2dp"
			    android:layout_toLeftOf="@+id/diarytype_dialog_showbtn"
			     />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/add_wandr_item5"
            android:layout_width="fill_parent"
            android:layout_height="230.0dip"
            android:layout_below="@id/add_wandr_item3"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/more_itemmiddle_press" >

			<TextView
			    android:id="@+id/add_wandr_beizhu"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:layout_marginLeft="15.0dip"
			    android:text="内      容:" />
			<EditText 
			    android:id="@+id/add_wandr_beizhu_edit"
			    android:layout_width="fill_parent"
			    android:layout_height="200dip"
			    android:layout_marginLeft="15.0dip"
			    android:layout_marginRight="15.0dip"
			    android:layout_marginBottom="15.0dip"
			    android:padding="5dip"
			    android:layout_toRightOf="@id/add_wandr_beizhu"
			    android:layout_centerVertical="true"
			    android:background="@drawable/text_edit_shape"
			    android:gravity="start" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/add_wandr_item6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_below="@id/add_wandr_item5"
            android:background="@drawable/more_itembottom_press"
            android:visibility="gone"
             >
			<TextView
			    android:id="@+id/add_wandr_uploadimage"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:layout_marginTop="15dip"
			    android:layout_marginBottom="15dip"
			    android:layout_marginLeft="15dip"
			    android:text="上传图片:" />
			 <GridView 
			        android:id="@+id/add_wandr_uploadimage_list"
			        android:layout_width="fill_parent"
			        android:layout_height="50dip"
				    android:layout_centerVertical="true"
				    android:layout_centerHorizontal="true"
				    android:layout_margin="10dip"
				    android:layout_toRightOf="@id/add_wandr_uploadimage"
			        android:horizontalSpacing="3dp"        
			        android:numColumns="4"
			        android:scrollbars="none"
			        android:verticalSpacing="5dp" >
			    </GridView>
        </RelativeLayout>
        
        <View
            android:id="@+id/register_view1"
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_below="@id/add_wandr_item6"
            />
        
        <Button
            android:id="@+id/add_wandr_save_btn"
            style="\@style/common_button"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_below="@id/register_view1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/login_btn_shape"
            android:gravity="center"
            android:text="保存日程"
            android:textColor="@color/white"
            android:textStyle="bold" />
        
        <View
            android:id="@+id/register_view2"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@id/add_wandr_save_btn"
            />
        
    </RelativeLayout>
        
    </ScrollView>
</RelativeLayout>
